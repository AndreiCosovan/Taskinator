
FloatLayout:
    cols:1
    BoxLayout:
        orientation:'vertical'
        
        MDToolbar:
            title: "ADD A TASK!"
            md_bg_color: .49, .14, .11, 1

        MDBottomNavigation:
            panel_color: .49, .14, .11, 1
            MDBottomNavigationItem:
                name: 'Homescreen'
                text: 'Home'
                icon: 'home-outline'





            MDBottomNavigationItem:
                name: 'addToDoScreen'
                text: 'add'
                icon: 'plus-outline'
                MDBoxLayout:
                    orientation: 'vertical'
                    MDTextField:
                        id: input_of_to_do
                        hint_text: "Type in your Task!"
                        color_mode: 'custom'
                        pos_hint: {'x': 0, 'y': 0}

                    MDBoxLayout:
                        orientation: 'horizontal'
                        adaptive_height: True
                        MDIconButton:
                            icon: "calendar"
                            on_release: app.show_date_picker()
                        MDLabel:
                            text: "No due date picked"
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                    MDBoxLayout:
                        orientation: 'horizontal'
                        adaptive_height: True
                        MDCheckbox:
                            size_hint: None, None
                            size: "48dp", "48dp"
                            unselected_color: 1, 1, 1, 1
                            selected_color: 1, 1, 1, 1
                        MDLabel:
                            text: "Not important!"
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1

                    MDFillRoundFlatButton:
                        text:"ADD"
                        md_bg_color: .49, .14, .11, 1
                        pos_hint: {"center_x": 0.9, "center_y": .5}
                    MDLabel:
                        text: ""
            MDBottomNavigationItem:
                name: 'statisticsScreen'
                text: 'stats'
                icon: 'clipboard-check'


            MDBottomNavigationItem:
                name: 'settingsScreen'
                text: 'settings'
                icon: 'settings'
